<h1>Your Merchants!</h1>
<ul>
<% for merchant in @merchants %>
    <li>
        <p>Name: <%= merchant.name %></p> 
        <form action="/merchants/<%= merchant.id %>/edit" method="POST">
        <input class="btn btn--danger" type="submit" value="edit" />
        </form> 
        <form action="/merchants/<%= merchant.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete" />
        </form>
        <% if merchant.isdeactivated == "0" %>
        <form action="/merchants/<%= merchant.id %>/deactivate" method="POST">
        <input class="btn btn--danger" type="submit" value="deactivate"/></form>
        <% else %>
        <form action="/merchants/<%= merchant.id %>/deactivate" method="POST">
        <input class="btn btn--danger" type="submit" value="reactivate"/></form>
        <% end %>
    </li>
        <%= merchant.isdeactivated %>
        <% if merchant.isdeactivated == "1" %>
        <li><p>hello</p></li>
        <% else %>
        <li><p>cya</p></li>
        <% end %>
<% end %>
</ul>
